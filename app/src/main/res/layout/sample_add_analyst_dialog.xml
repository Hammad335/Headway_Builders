<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:layout_gravity="center"
    android:background="@drawable/blur"
    android:backgroundTint="@android:color/transparent"
    app:cardBackgroundColor="#FFFFFF"
    app:cardCornerRadius="10dp"
    app:cardElevation="15dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="356dp"
        android:background="@drawable/blur">

        <ImageView
            android:id="@+id/addAnalystDatabaseImageView"
            android:layout_width="158dp"
            android:layout_height="122dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:src="@drawable/manager" />

        <LinearLayout
            android:id="@+id/analystUserNameLinearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/addAnalystDatabaseImageView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="4dp"
                android:src="@drawable/username" />


            <EditText
                android:id="@+id/add_anlayst_username"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_marginStart="6dp"
                android:background="@drawable/edittext_wborder_color"
                android:elegantTextHeight="true"
                android:ems="10"
                android:fontFamily="@font/audiowide"
                android:hint="USERNAME"
                android:inputType="textPersonName"
                android:textColor="@color/black"
                android:textColorHint="@color/grey" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/analystPassLinearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/analystUserNameLinearLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="4dp"
                android:src="@drawable/password" />


            <EditText
                android:id="@+id/add_anlayst_password"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_marginStart="6dp"
                android:background="@drawable/edittext_wborder_color"
                android:elegantTextHeight="true"
                android:ems="10"
                android:fontFamily="@font/audiowide"
                android:hint="PASSWORD"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:textColorHint="@color/grey" />

        </LinearLayout>

        <Button
            android:id="@+id/addNewAnalystToDatabaseBtn"
            android:layout_width="160dp"
            android:layout_height="37dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/analystPassLinearLayout"
            android:layout_marginTop="20dp"
            android:backgroundTint="#FFA500"
            android:fontFamily="@font/audiowide"
            android:text="Add Analyst"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/cancelBtn"
            android:layout_width="160dp"
            android:layout_height="37dp"
            android:layout_below="@+id/addNewAnalystToDatabaseBtn"
            android:layout_alignParentEnd="true"
            android:backgroundTint="#FA2E2E"
            android:fontFamily="@font/audiowide"
            android:text="CANCEL"
            android:textColor="@color/white" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>