<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back3"
    tools:context=".BuildingDetailsFragment">


    <LinearLayout
        android:id="@+id/statusBarLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="clip_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="20dp"
            android:src="@drawable/ic_back_arrow" />

        <TextView
            android:id="@+id/buildingDetailsTextView"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:fontFamily="@font/audiowide"
            android:gravity="center_vertical"
            android:text="Buillding Details"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/statusBarLinearLayout"
        android:background="#FF9800"
        android:layout_marginTop="5dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"/>


    <ScrollView
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/statusBarLinearLayout"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#92FFFFFF"
            android:orientation="vertical"
            android:padding="10dp">

            <ImageView
                android:id="@+id/buildngDetailsImageView"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="8dp"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_border_color"
                    android:fontFamily="@font/audiowide"
                    android:text="Building Id: "
                    android:textColor="#0E0E0E"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/buildingDetailsBId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:fontFamily="@font/audiowide"
                    android:shadowColor="#0C0C0C"
                    android:text="010"
                    android:textAlignment="viewEnd"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="normal|bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_border_color"
                    android:fontFamily="@font/audiowide"
                    android:text="Building Name: "
                    android:textColor="#0E0E0E"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/buildingDetailsBName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:fontFamily="@font/audiowide"
                    android:shadowColor="#0C0C0C"
                    android:text="Name"
                    android:textAlignment="viewEnd"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="normal|bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_border_color"
                    android:fontFamily="@font/audiowide"
                    android:text="Building Type: "
                    android:textColor="#0E0E0E"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/buildingDetailsBType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:fontFamily="@font/audiowide"
                    android:shadowColor="#0C0C0C"
                    android:text="type"
                    android:textAlignment="viewEnd"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="normal|bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_border_color"
                    android:fontFamily="@font/audiowide"
                    android:text="Location: "
                    android:textColor="#0E0E0E"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/buildingDetailsBLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:fontFamily="@font/audiowide"
                    android:shadowColor="#0C0C0C"
                    android:text="type"
                    android:textAlignment="viewEnd"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="normal|bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_border_color"
                    android:fontFamily="@font/audiowide"
                    android:text="Building Area: "
                    android:textColor="#0E0E0E"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/buildingDetailsBArea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:fontFamily="@font/audiowide"
                    android:shadowColor="#0C0C0C"
                    android:text="00sqft"
                    android:textAlignment="viewEnd"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="normal|bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_border_color"
                    android:fontFamily="@font/audiowide"
                    android:text="No. of Flats: "
                    android:textColor="#0E0E0E"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/buildingDetailsBNoOfFlats"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:fontFamily="@font/audiowide"
                    android:shadowColor="#0C0C0C"
                    android:text="00"
                    android:textAlignment="viewEnd"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="normal|bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_border_color"
                    android:fontFamily="@font/audiowide"
                    android:text="No. of Floors: "
                    android:textColor="#0E0E0E"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/buildingDetailsBNoOfFloors"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:fontFamily="@font/audiowide"
                    android:shadowColor="#0C0C0C"
                    android:text="00"
                    android:textAlignment="viewEnd"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="normal|bold" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_border_color"
                    android:fontFamily="@font/audiowide"
                    android:text="No. of Lifts: "
                    android:textColor="#0E0E0E"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/buildingDetailsBNoOfLifts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:fontFamily="@font/audiowide"
                    android:shadowColor="#0C0C0C"
                    android:text="00"
                    android:textAlignment="viewEnd"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="normal|bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_border_color"
                    android:fontFamily="@font/audiowide"
                    android:text="Parking Area: "
                    android:textColor="#0E0E0E"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/buildingDetailsBParkingArea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:fontFamily="@font/audiowide"
                    android:shadowColor="#0C0C0C"
                    android:text="00sqft"
                    android:textAlignment="viewEnd"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="normal|bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_border_color"
                    android:fontFamily="@font/audiowide"
                    android:text="Details: "
                    android:textColor="#0E0E0E"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/buildingDetailsBShortDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:fontFamily="@font/audiowide"
                    android:shadowColor="#0C0C0C"
                    android:text="details"
                    android:textAlignment="viewEnd"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="normal|bold" />
            </LinearLayout>

            <Button
                android:id="@+id/btnEditBuilding"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:backgroundTint="#FFA500"
                android:text="Edit Building"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnAddWorker"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:backgroundTint="#FFA500"
                android:text="Add Worker"
                android:textColor="@color/white" />

        </LinearLayout>


    </ScrollView>


</RelativeLayout>