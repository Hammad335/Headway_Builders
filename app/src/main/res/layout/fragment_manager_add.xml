<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".manager.ManagerAddFragment">

    <TextView
        android:id="@+id/txtAnalystDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/audiowide"
        android:text="Analyst Details"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="28sp"
        android:textColor="#000000"
        android:textStyle="bold"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/txtAnalystDetails"
        android:background="#FF9800"
        android:layout_marginTop="18dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/analystsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtAnalystDetails"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="10dp"
        android:layout_above="@+id/addNewAnalystBtn"/>

    <Button
        android:id="@+id/addNewAnalystBtn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:text="Add New Analyst"
        android:textColor="#FFFFFF"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#FFA500"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>